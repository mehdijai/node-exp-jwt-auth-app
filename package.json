{
    "name": "node-exp-jwt-auth-app",
    "version": "1.0.0",
    "description": "NodeJS, Express, PrismaJS JWT Auth System with Jest Tests",
    "keywords": [
        "NodeJS",
        "ExpressJS",
        "Jest",
        "Supertest",
        "Node API",
        "NodeMailer",
        "NodeMailer-mock"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mehdijai/nodexp-auth-api"
    },
    "homepage": "https://github.com/mehdijai/nodexp-auth-api",
    "main": "./src/server.ts",
    "scripts": {
        "dev": "nodemon -r tsconfig-paths/register src/server.ts",
        "start": "node dist/server.js",
        "test": "cross-env STAGE=TEST jest --detectOpenHandles",
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
        "build": "typecheck && tsc"
    },
    "author": "Mehdi Jai",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^5.14.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cheerio": "^1.0.0-rc.12",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.2.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^6.9.14",
        "prisma": "^5.14.0",
        "supertest": "^7.0.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "uuid": "^9.0.1",
        "winston": "^3.13.1",
        "x-xss-protection": "^2.0.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/body-parser": "^1.19.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.12.12",
        "@types/nodemailer": "^6.4.15",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^9.0.8",
        "@typescript-eslint/eslint-plugin": "^7.10.0",
        "@typescript-eslint/parser": "^7.10.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "nodemailer-mock": "^2.0.6",
        "nodemon": "^3.1.1",
        "prettier": "^3.0.1",
        "ts-jest": "^29.2.3",
        "typescript": "^5.4.5"
    }
}